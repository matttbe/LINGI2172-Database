
VAR USER          BASE RELATION {USERID INTEGER, USERTYPE INTEGER, USERNAME CHAR, PASSWORD CHAR}  KEY {USERID};
VAR PARKING       BASE RELATION {PARKINGID INTEGER, NAME CHAR, DEFIBRILLATOR BOOLEAN, FREEPLACES INTEGER, TOTALPLACES INTEGER, MAXHEIGHT INTEGER}  KEY {PARKINGID};
VAR PASS          BASE RELATION {PASSID INTEGER, DATESTART CHAR, DATAEND CHAR, USERID INTEGER}  KEY {PASSID};
VAR CAR           BASE RELATION {HEIGHT INTEGER, FUEL CHAR, USERID INTEGER, LATITUDE RATIONAL, LONGITUDE RATIONAL}  KEY {};
VAR HISTORY       BASE RELATION {USERID INTEGER, DATETIMESTART CHAR, DATETIMEEND CHAR, PARKINGID INTEGER}  KEY {USERID, DATETIMESTART, DATETIMEEND};
VAR PASSPARKING   BASE RELATION {PARKINGID INTEGER, PASSID INTEGER}  KEY {};
VAR LOCATION      BASE RELATION {PARKINGID INTEGER, LATITUDE RATIONAL, LONGITUDE RATIONAL}  KEY {LATITUDE, LONGITUDE};
VAR ADDRESS       BASE RELATION {PARKINGID INTEGER, STREET CHAR, NUMBER INTEGER, CITY CHAR, ZIP INTEGER, COUNTRY CHAR}  KEY {STREET, NUMBER, CITY, ZIP, COUNTRY};
VAR OPENINGHOURS  BASE RELATION {DAYSTART INTEGER, DAYEND INTEGER, HOURSTART CHAR, HOUREND CHAR, PARKINGID INTEGER}  KEY {};
VAR HOURLYRATE    BASE RELATION {TIMESTART CHAR, TIMEEND CHAR, COST RATIONAL, PARKINGID INTEGER}  KEY {TIMESTART, TIMEEND, COST, PARKINGID};
VAR FORBIDDENFUEL BASE RELATION {PARKINGID INTEGER, FUEL CHAR}  KEY {PARKINGID, FUEL};

CONSTRAINT C1  PASS {USERID}    <= USER {USERID};
CONSTRAINT C2  CAR {USERID}     <= USER {USERID};
CONSTRAINT C3  HISTORY {USERID} <= USER {USERID};
CONSTRAINT C6  PASSPARKING {PASSID} <= PASS {PASSID};
CONSTRAINT C4  HISTORY {PARKINGID}       <= PARKING {PARKINGID};
CONSTRAINT C5  PASSPARKING {PARKINGID}   <= PARKING {PARKINGID};
CONSTRAINT C7  LOCATION {PARKINGID}      <= PARKING {PARKINGID};
CONSTRAINT C8  ADDRESS {PARKINGID}       <= PARKING {PARKINGID};
CONSTRAINT C9  OPENINGHOURS {PARKINGID}  <= PARKING {PARKINGID};
CONSTRAINT C10 HOURLYRATE {PARKINGID}    <= PARKING {PARKINGID};
CONSTRAINT C11 FORBIDDENFUEL {PARKINGID} <= PARKING {PARKINGID};
